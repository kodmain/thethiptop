    "version": "0.2.0",
    "configurations": [
        {
            "name": "thetiptop_client",
            "request": "launch",
            "type": "dart",
            "program": "app/lib/main.dart"
        },
        {
            "name": "thetiptop_client (profile mode)",
            "request": "launch",
            "type": "dart",
            "program": "app/lib/main.dart",
            "flutterMode": "profile"
        },
        {
            "name": "thetiptop_client (release mode)",
            "request": "launch",
            "type": "dart",
            "program": "app/lib/main.dart",
            "flutterMode": "release"
        },
        {
            "name": "API",
            "mode": "debug",
            "type": "go", 
            "request": "launch",
            "program": "${workspaceFolder}/api/cmd/main.go",
            "args": ["--config","${workspaceFolder}/api/config.local.yml"],
            "env": {},
            "port": 2345,
            "host":"127.0.0.1",
            "buildFlags": "",
            "showLog": true
        } 
